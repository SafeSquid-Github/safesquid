<?xml version="1.0" encoding="UTF-8"?>
<section>
	<ssqore>
		<enabled>true</enabled>
		<comment>SSqore</comment>
		<parentgroup>infrastructure</parentgroup>
		<logo>fa-check-square</logo>
		<wizard>false</wizard>
		<type>section</type>
		<desc><![CDATA[<p> SSqore allows you to categorize the websites, depending upon the potential nature of the content served by the web-site.</p>
		<p>SSqore queries SafeSquid's Content Categorisation Service (CCS), to determine if a web-site belongs to one or more categories.</p>]]></desc>
		<global>
			<enabled n="0">
				<comment>Enabled</comment>
				<value>ssqore_enable</value>
				<type>BOOL</type>
				<desc><![CDATA[ <p>Enable or Disable the use of SSqore engine.</p>]]></desc>
			</enabled>
			<heuristic n="1">
				<comment>Heuristic</comment>
				<value>heuristic_enable</value>
				<type>BOOL</type>
				<desc><![CDATA[ <p>Enable or Disable the Heuristic scanning.</p> <p>Enabling heuristic scanning allows you to analyze the content of a web page (response) in real-time and categorize the site instead of just URL based categorization.</p>]]></desc>
			</heuristic>
		</global>
		<select>
			<ssqore_enable>
				<FALSE>
					<comment>FALSE</comment>
					<value>FALSE</value>
					<desc>
					<![CDATA[ Disable categorization with SSqore engine.]]>
					</desc>
				</FALSE>
				<TRUE>
					<comment>TRUE</comment>
					<value>TRUE</value>
					<desc>
					<![CDATA[ Enable categorization with SSqore engine.]]>
					</desc>
				</TRUE>
			</ssqore_enable>
			<heuristic_enable>
				<FALSE>
					<comment>FALSE</comment>
					<value>TRUE</value>
					<desc>
					<![CDATA[ Disable heuristic scanning.]]>
					</desc>
				</FALSE>
				<TRUE>
					<comment>TRUE</comment>
					<value>FALSE</value>
					<desc>
					<![CDATA[ Enable heuristic scanning.]]>
					</desc>
				</TRUE>
			</heuristic_enable>
		</select>
	</ssqore>
</section>